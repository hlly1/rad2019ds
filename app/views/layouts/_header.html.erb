    <header class="navbar navbar-fixed-top navbar-inverse">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <div class="container">
    <%= link_to "yourcourse", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">

        <!--Dropdown Menu for category-->

        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style = "background-color:#12C8FF; color:#ffffff;border-radius: 8px";>
              <span class="glyphicon glyphicon-screenshot"></span> Category <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% Category.all.each do |category| %>
                <li><%= link_to category.name, categories_path(category.name) %></li>
              <% end %>
              
              <% if session[:user_id] %>
              <li class="divider"></li>
              <li><%= link_to "Create Category", addcategory_path %></li>
              <% end %>               
            </ul>
        </li>
        
        <!--Dropdown Menu for Location-->
        
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style = "background-color:#12C8FF; color:#ffffff;border-radius: 8px";>
              <span class="glyphicon glyphicon-send"></span> Location <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% Location.all.each do |location| %>
                <li><%= link_to location.name, locations_path(location.id) %></li>
              <% end %>
              <% if session[:user_id] %>
              <li class="divider"></li>
              <li><%= link_to "Create Location", addlocation_path %></li>
              <% end %>              
            </ul>
        </li>
        
        <% if logged_in? %>
          <%= link_to '<button class="login" type="button">
          <span class="glyphicon glyphicon-book"></span> New Course
          </button>'.html_safe, newcourse_path %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style = "background-color:#12C8FF; color:#ffffff;border-radius: 8px">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>

        <% else %>
          <!--Login for user-->
          <%= link_to '<button class="login" type="button">
          <span class="glyphicon glyphicon-user"></span> Login
          </button>'.html_safe, login_path %>
        <% end %>
        
        
      </ul>
    </nav>
  </div>
</header>