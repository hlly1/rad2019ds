<% provide(:title, "Create Category") %>
<h1 class = "allco">Create a new category</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@category, url: addcategory_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Create new category", class: "btn btn-primary regbtn" %>
    <% end %>
  </div>
</div>
<br><br>